<h2>
  <%= t(".title") %>
</h2>

<%= form_with mode: resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <p><%= f.label :email %></p>
    <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
  </div>

  <div class="actions">
    <%= f.submit t(".send_email") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
